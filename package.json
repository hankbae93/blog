{
  "name": "prd-agent-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "sync": "node scripts/sync-content.js && node scripts/generate-meta.js",
    "predev": "npm run sync",
    "dev": "next dev --turbopack",
    "prebuild": "npm run sync",
    "build": "next build",
    "postbuild": "next-sitemap && npm run postbuild:search",
    "postbuild:search": "pagefind --site .next/server/app --output-path public/_pagefind",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^15",
    "next-sitemap": "^4.2.3",
    "nextra": "^4",
    "nextra-theme-docs": "^4",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "pagefind": "^1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5"
  }
}
