{
  "sources": {
    "product_hunt": {
      "name": "Product Hunt",
      "url": "https://www.producthunt.com/feed",
      "type": "trending_products",
      "enabled": true
    },
    "hacker_news": {
      "name": "Hacker News",
      "url": "https://news.ycombinator.com",
      "type": "top_stories",
      "enabled": true
    },
    "github_trending": {
      "name": "GitHub Trending",
      "url": "https://github.com/trending",
      "type": "trending_repos",
      "enabled": true
    },
    "geeknews": {
      "name": "GeekNews (Hackers)",
      "url": "https://news.hada.io",
      "type": "top_stories",
      "enabled": true
    },
    "dev_to": {
      "name": "Dev.to",
      "url": "https://dev.to/feed",
      "type": "articles",
      "enabled": true,
      "note": "Reddit r/programming 대체"
    },
    "lobsters": {
      "name": "Lobsters",
      "url": "https://lobste.rs",
      "type": "top_stories",
      "enabled": true,
      "note": "Reddit 대체 - 기술 커뮤니티"
    },
    "indie_hackers": {
      "name": "Indie Hackers",
      "url": "https://www.indiehackers.com",
      "type": "trending_posts",
      "enabled": true,
      "note": "Reddit r/startups 대체"
    },
    "techcrunch": {
      "name": "TechCrunch",
      "url": "https://techcrunch.com/feed/",
      "type": "startup_news",
      "enabled": true,
      "note": "스타트업 뉴스"
    },
    "youtube_trending": {
      "name": "YouTube Trending (Tech)",
      "type": "trending_videos",
      "enabled": true,
      "note": "YouTube Data API v3 - 기술/과학 카테고리 인기 영상",
      "api_endpoint": "https://www.googleapis.com/youtube/v3/videos",
      "params": {
        "part": "snippet,statistics",
        "chart": "mostPopular",
        "regionCode": "KR",
        "maxResults": 10,
        "videoCategoryId": 28
      }
    },
    "google_trends": {
      "name": "Google Trends",
      "enabled": true,
      "type": "rss",
      "url": "https://trends.google.co.kr/trending/rss?geo=KR",
      "geo": "KR",
      "note": "한국 실시간 급상승 검색어 (RSS 피드, API 키 불필요)"
    },
    "naver_trends": {
      "name": "Naver Trends",
      "enabled": true,
      "type": "scraping",
      "note": "네이버 실시간 검색어는 2021년 서비스 종료. 대체 소스(Zum 등) 활용"
    },
    "playstore_niche": {
      "name": "Play Store Niche Apps",
      "type": "scraper",
      "enabled": true,
      "note": "google-play-scraper npm - API 키 불필요"
    },
    "appstore_niche": {
      "name": "App Store Niche Apps",
      "type": "scraper",
      "enabled": true,
      "note": "app-store-scraper npm - API 키 불필요"
    }
  },
  "naver_api": {
    "client_id_env": "NAVER_CLIENT_ID",
    "client_secret_env": "NAVER_CLIENT_SECRET",
    "note": "Naver DataLab API (선택) - 실시간 검색어 API는 미제공"
  },
  "youtube_api": {
    "api_key_env": "YOUTUBE_API_KEY",
    "note": "YouTube Data API v3 Key - Set in .env.local or Vercel Environment Variables"
  },
  "producthunt_api": {
    "api_key_env": "PRODUCTHUNT_ACCESS_TOKEN",
    "endpoint": "https://api.producthunt.com/v2/api/graphql",
    "note": "Set in .env.local or Vercel Environment Variables"
  },
  "collection": {
    "max_items_per_source": 10,
    "date_format": "YYYY-MM-DD"
  },
  "deep_crawl": {
    "enabled": true,
    "product_hunt": {
      "count": 10,
      "method": "graphql_api",
      "note": "GraphQL API로 상세 정보 통합 수집 (WebFetch 개별 페이지 크롤링 불가)"
    }
  },
  "niche_app_settings": {
    "categories": ["PRODUCTIVITY", "HEALTH_AND_FITNESS", "FINANCE", "TOOLS", "LIFESTYLE"],
    "exclude_top_ranks": 30,
    "max_reviews": 10000,
    "min_reviews": 100,
    "min_rating": 4.0,
    "countries": ["us"],
    "recent_app_threshold_months": 12,
    "min_recent_apps": 5,
    "total_apps": 10
  },
  "output": {
    "sources_dir": "generated/sources",
    "insights_dir": "generated/insights",
    "trends_dir": "generated/trends",
    "summaries_dir": "generated/summaries",
    "app_trends_dir": "generated/app-trends"
  },
  "automation": {
    "daily": {
      "time": "09:00",
      "timezone": "Asia/Seoul"
    },
    "weekly": {
      "day": "Sunday",
      "time": "10:00"
    },
    "monthly": {
      "day": 1,
      "time": "11:00"
    }
  }
}
